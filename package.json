{
  "name": "@omnygroup/omnyreporter",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/parse-tests.js",
  "bin": {
    "omny": "./bin/omny.js"
  },
  "exports": {
    ".": {
      "import": "./dist/parse-tests.js",
      "types": "./dist/parse-tests.d.ts"
    },
    "./reporters": {
      "import": "./dist/reporters/index.js",
      "types": "./dist/reporters/index.d.ts"
    },
    "./vitest-reporter": {
      "import": "./dist/VitestReporter.js",
      "types": "./dist/VitestReporter.d.ts"
    },
    "./dist/VitestReporter.js": {
      "import": "./dist/VitestReporter.js",
      "types": "./dist/VitestReporter.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node parse-tests.mjs",
    "report:lint": "node bin/omny.js diagnostics --run eslint",
    "report:tsc": "node bin/omny.js diagnostics --run typescript",
    "report:all": "node bin/omny.js diagnostics --run all",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@omnygroup/eslint": "file:../omnyeslint",
    "@pinojs/redact": "^0.4.0",
    "@types/fs-extra": "^11.0.4",
    "@types/yargs": "^17.0.35",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "eslint": "9.39.2",
    "fs-extra": "^11.3.3",
    "inversify": "^7.11.0",
    "neverthrow": "^8.2.0",
    "ora": "^9.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.9.3",
    "upath": "^2.0.1",
    "yargs": "^18.0.0",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "vitest": "^2.0.0 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.7",
    "vitest": "^4.0.17"
  }
}
